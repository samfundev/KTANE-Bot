{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "Node16",
		"allowJs": true,
		"lib": ["ES2019"],
		"module": "commonjs",
		"target": "ES2019",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strict": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		// TODO: remove once we migrate to sapphire v3
		"skipLibCheck": true
	},
	"include": ["src", "src/node_modules"],
	"exclude": ["node_modules"]
}